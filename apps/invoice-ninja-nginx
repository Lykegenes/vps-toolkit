server {
    listen 80;
    server_name NINJA_SERVER_NAME;

    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name NINJA_SERVER_NAME;

    ssl_certificate /certs/NINJA_SERVER_NAME/fullchain.pem;
    ssl_certificate_key /certs/NINJA_SERVER_NAME/key.pem;
    ssl_trusted_certificate /certs/NINJA_SERVER_NAME/fullchain.pem;

    include vps-toolkit/ssl.conf;

    root /var/www/invoice-ninja/public;
    index index.html index.htm index.php;

    location /.well-known/acme-challenge/ {
        root /certs/challenges/;
    }

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~ \.php$ {
        try_files $uri /index.php =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}




