server {
    listen 80;
    server_name TRANSMISSION_SERVER_NAME;

    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;

    server_name TRANSMISSION_SERVER_NAME;

    include vps-toolkit/ssl.conf;
    ssl_certificate /certs/TRANSMISSION_SERVER_NAME/fullchain.pem;
    ssl_certificate_key /certs/TRANSMISSION_SERVER_NAME/key.pem;
    ssl_trusted_certificate /certs/TRANSMISSION_SERVER_NAME/fullchain.pem;

    root /home/TRANSMISSION_USERNAME/transmission/completed;

    location / {
        autoindex on;
        auth_basic "Please authenticate yourself.";
        auth_basic_user_file /etc/nginx/conf.d/transmission-downloads.htpasswd;
    }

}

