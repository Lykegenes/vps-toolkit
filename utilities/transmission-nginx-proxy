upstream transmissionweb {
    server localhost:9091;
}

server {
    listen 80;
    server_name TRANSMISSION_SERVER_NAME;

    return 301 https://$server_name$request_uri;
}


server {
    listen 443 ssl http2;

    server_name TRANSMISSION_SERVER_NAME;

    ssl_certificate /certs/TRANSMISSION_SERVER_NAME/fullchain.pem;
    ssl_certificate_key /certs/TRANSMISSION_SERVER_NAME/key.pem;
    ssl_trusted_certificate /certs/TRANSMISSION_SERVER_NAME/fullchain.pem;

    include vps-toolkit/ssl.conf;

    root /var/www/transmission;

    location /transmission {
        proxy_pass          http://transmissionweb;
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
        proxy_redirect      off;
        proxy_buffering     off;
        proxy_set_header    Host            $host;
        proxy_set_header    X-Real-IP       $remote_addr;
    }

    location / {
        return 301 /transmission;
    }

}

